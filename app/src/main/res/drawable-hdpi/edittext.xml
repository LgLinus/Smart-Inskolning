
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp" android:color="#5e7974" />
            <padding
                android:bottom="5sp"
                android:right="5sp"
                android:left="5sp"
                android:top="5sp"/>
            <corners
                android:radius="1sp"/>
            <solid
                android:color="@color/white"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp" android:color="#5e7974" />
            <padding
                android:bottom="5sp"
                android:right="5sp"
                android:left="5sp"
                android:top="5sp"/>
            <corners
                android:radius="1sp"/>
            <solid
                android:color="@color/gray"/>
        </shape>
    </item>
       </selector>