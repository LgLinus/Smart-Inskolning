<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="h.ghg.dstdsg.smartinskolning.Activity_Evaluation">

    <include
        android:id="@+id/inlHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header"
        />

    <TextView
        android:id="@+id/tvEvaluation_Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/inlHeader"
        android:text="@string/evaluation_title"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="@dimen/default_text_size_message"/>
    <include
        android:id="@+id/thoughts_about_appGroup"
        android:layout_width="fill_parent"
        android:layout_below="@id/tvEvaluation_Title"
        android:layout_height="wrap_content"
        layout="@layout/fill_form"
        />

    <include
        android:id="@+id/info_ClearGroup"
        android:layout_below="@id/thoughts_about_appGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/fill_form_checkboxes"
        />


    <include
        android:id="@+id/other_ThoughtsGroup"
        android:layout_width="fill_parent"
        android:layout_below="@id/info_ClearGroup"
        android:layout_height="wrap_content"
        layout="@layout/fill_form"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonlogin"
        android:layout_alignParentBottom="true"
        android:textColor="@color/text"
        android:text="@string/next"
        android:id="@+id/btnEvaluation_Next"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:paddingBottom="15dp"
        android:text="1/2"/>
</RelativeLayout>
</ScrollView>
